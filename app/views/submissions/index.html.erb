<div class="span12">
<h1>Listing submissions</h1>

<table>
  <tr>
    <th>Price</th>
    <th>Timeframe</th>
    <th>Description</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @submissions.each do |submission| %>
  <tr>
    <td><%= submission.price %></td>
    <td><%= submission.timeframe %></td>
    <td><%= submission.description %></td>
    <td><%= link_to 'Show', submission %></td>
    <td><% if can? :update, @submission %><%= link_to 'Edit', edit_submission_path(submission) %><%end%></td>
    <td><% if can? :update, @submission %><%= link_to 'Destroy', submission, method: :delete, data: { confirm: 'Are you sure?' } %><%end%></td>

  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Submission', new_submission_path %>
</div>