<div class="landing-hero">
    <%= image_tag("bg1.jpg") %>
    <div class="inner">
        <div class="container">
            <div class="row">
                <div class="span12">
                    <div class="center">
                        <h1>Make your ideas come to life.</h1>
                        <h2>The easiest way to transform the idea that’s in your <em>head</em> into a prototype that’s in your <em>hand</em>.</h2>
                        <p><%= link_to 'Start a Project', new_project_path, :class=> "btn btn-large btn-success" %></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

