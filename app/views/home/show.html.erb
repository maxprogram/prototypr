  <%= link_to 'Submissions', "#", :class=> "btn btn-middle btn-info" %>
</div>
<div class="btn-Designs" style="float:left;margin:10px;">
  <%= link_to 'Designs', "#", :class=> "btn btn-middle btn-info" %>
</div>
<div style="clear:both;"/>

